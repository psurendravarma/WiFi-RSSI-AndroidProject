<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e0ffff"
    android:layout_margin="0dp">

    tools:context="com.example.my.indoorlocl.MainActivity">



    <TextView android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:textSize="15sp"
        android:textColor="#ff00ff"
        android:text="Smart Building Application" />
    <TextView android:id="@+id/notext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="#00ff"
        android:text="" />
    <Button
        android:layout_width = "wrap_content"
        android:layout_height ="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:textSize="15sp"
        android:background="#fffff0"
        android:textColor="#000000"
        android:text="Get RSSIs"
        android:onClick="gotoGet"/>
    <!--
    <TextView android:id="@+id/notext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="#00ff"
        android:text="" />
        -->

    <ImageView
        android:id="@+id/image1"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="300sp"
        android:src="@drawable/hl"
        android:alpha="0.5"/>



</LinearLayout>
